<?xml version="1.0"?>
<JWM>

  <!-- Basic bindings. -->
  <Key key="Up">up</Key>
  <Key key="Down">down</Key>
  <Key key="Right">right</Key>
  <Key key="Left">left</Key>
  <Key key="Return">select</Key>
  <Key key="Escape">escape</Key>

  <!-- Media keys. -->
  <Key mask="" key="XF86AudioRaiseVolume">exec:pactl set-sink-volume $(pactl list short sinks | grep RUNNING | cut -f1) +2%</Key>
  <Key mask="" key="XF86AudioLowerVolume">exec:pactl set-sink-volume $(pactl list short sinks | grep RUNNING | cut -f1) -2%</Key>
  <Key mask="" key="XF86AudioMute">exec:pactl set-sink-mute $(pactl list short sinks | grep RUNNING | cut -f1) toggle</Key>
  <Key mask="" key="XF86AudioPlay">exec:mpc toggle</Key>
  <Key mask="" key="XF86AudioNext">exec:mpc next</Key>
  <Key mask="" key="XF86AudioPrev">exec:mpc prev</Key>

  <!-- Some more bindings. -->
  <Key mask="A" key="Tab">nextstacked</Key>
  <Key mask="A" key="F4">close</Key>
  <Key mask="A" key="#">desktop#</Key>
  <Key mask="A" key="F1">root:3</Key>
  <Key mask="A" key="F2">window</Key>
  <Key mask="A" key="F10">maximize</Key>
  <Key mask="A" key="F11">fullscreen</Key>
  <Key mask="" key="Print">exec:gnome-screenshot</Key>
  
</JWM>
