#!/bin/sh

# Do a git pull on multiple git repos in a directory

# cd to given directory of git repositories 
cd ${1:-.}

for dir in *
do
    if [ -d $dir ]; then
	cd $dir
	git pull 2>/dev/null | grep -v "up to date" 2>/dev/null
	if [ $? = '0' ]; then echo "$(tput setaf 2)Repository $(basename $(pwd)) updated.$(tput sgr0)"; fi
	cd ..
    fi
done
