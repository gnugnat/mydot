trap 'exit 128' INT
export PATH


system="$(hostname -s)"

prog_name="$(basename "${0}")"
prog_desc="backup important system directories and files"
prog_args=""


usage() {
    cat <<EOF
Usage: ${prog_name} [OPTION]... ${prog_args}
${prog_name} - ${prog_desc}

Options:
    -V, --version  show program version
    -h, --help     show avalible options
EOF
}

version() {
    cat <<EOF
${prog_name} 9999

Copyright (c) 2020-2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
EOF
}

sh_msg() {
    echo "$(tput bold)$(tput setaf 2)>>>$(tput setaf 7) ${*}$(tput sgr0)"
}

bak_dir() {
    if [ -d "${1}" ]
    then
        mkdir -p "${2}"
        sh_msg "Backing up ${1} into ${2}"
        bak-dir "${1}" "${2}" >/dev/null 2>&1
    else
        echo "WARNING: ${1} not found"
    fi
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    -V | -version | --version )
        version
        exit 0
        ;;
    -* )
        version
        echo
        usage
        exit 1
        ;;
esac


if [ -n "${1}" ]
then
    mkdir -p "${1}"
    cd "${1}" || exit 1
fi

bak_dir "/boot" "${system}-boot"
bak_dir "/etc" "${system}-etc"
bak_dir "/usr/etc" "${system}-usr_etc"

if [ -d "${EPREFIX}/etc/portage" ]
then
    sh_msg "Backing up portage"
    bak-portage "${system}-portage"
fi

if [ -f /proc/config.gz ]
then
    sh_msg "Backing up ${system} kernel configuration"
    mkdir -p "${system}-kernel"
    zcat /proc/config.gz > "${system}-kernel/config-${system}-$(uname -r)"
fi
