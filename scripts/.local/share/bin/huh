# Huh?
# Find commands

# Also recommended: 'which'


prog_name="$(basename "${0}")"
prog_desc="find commands"
prog_args="COMMAND..."


usage() {
    cat <<EOF
Usage: ${prog_name} [OPTION]... ${prog_args}
${prog_name} - ${prog_desc}

Options:
    -V, --version  show program version
    -h, --help     show avalible options
EOF
}

version() {
    cat <<EOF
${prog_name} 9999

Copyright (c) 2020-2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
EOF
}

header_msg() {
    echo
    echo "$(tput bold)$1 $(tput sgr0)"
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    -V | -version | --version )
        version
        exit 0
        ;;
    -* )
        version
        echo
        usage
        exit 1
        ;;
esac


for arg in "${@}"
do

    if type "${arg}" >/dev/null 2>&1
    then
        header_msg "Found ${arg} in:"
        whereis "${arg}"

        header_msg "Executing ${arg} from:"
        type "${arg}"

        header_msg "About ${arg}:"
        command "${arg}" --help 2>/dev/null | head
    else
        header_msg "${arg} not found"
    fi
done

echo
