# Simple archive extractor wrapper


trap 'exit 128' INT
export PATH


if [ -f "${1}" ]; then
    case ${1} in
        *.7z)        bsdtar xf "${1}"                ;;
        *.Z)         uncompress "${1}"               ;;
        *.deb)       ar x "${1}"                     ;;
        *.rar)       unrar x "${1}"                  ;;
        *.tar)       tar xf "${1}"                   ;;
        *.tbz2)      tar xjf "${1}"                  ;;
        *.tgz)       tar xzf "${1}"                  ;;
        *.xpak)      qtbz2 -s "${1}"                 ;;
        *.zip)       unzip "${1}"                    ;;
        *.tar.bz2)   tar xjf "${1}"                  ;;
        *.bz2)       bunzip2 "${1}"                  ;;
        *.tar.gz)    tar xzf "${1}"                  ;;
        *.gz)        gunzip "${1}"                   ;;
        *.tar.xz)    tar xJpf "${1}"                 ;;
        *)           echo "${1} cannot be extracted" ;;
    esac
else
    echo "${1} is not a valid file"
fi
