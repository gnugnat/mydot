#!/bin/sh


trap 'exit 128' INT
export PATH


# one may want this to be unprivileged
repoman manifest || ebuild "${1}" manifest

# we want this to be privileged on Gentoo systems
if [ "$(whoami)" != root ] && [ -z "${EPREFIX}" ]
then
    sudo ebuild "${1}" clean merge
else
    ebuild "${1}" clean merge
fi
