trap 'exit 128' INT
export PATH


usage() {
    cat <<EOF
Usage: detached [OPTION] COMMAND
detached - start a detached process

Options:
    -h  show this help message

Copyright (c) 2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
EOF
}


case "${1}"
in
    "" )
        echo "ERROR: No command provided"
        usage
        exit 1
        ;;
    -h | -help | --help )
        usage
        exit 0
        ;;
esac

# If no second argument is given - pass
# curret directory as the second argument
if [ -z "${2}" ]
then
    dir="$(pwd)"
else
    dir=""
fi


eval "${@}" "${dir}" >/dev/null 2>&1 &
