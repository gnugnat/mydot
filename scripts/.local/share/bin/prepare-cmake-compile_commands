# Prepare compile_commands.json for
# developemnt when using clangd
# Thanks to:
# https://releases.llvm.org/9.0.0/tools/clang/tools/extra/docs/clangd/Installation.html


trap 'exit 128' INT
export PATH
set -e


if [ ! -f CMakeLists.txt ]
then
    echo "No such file: CMakeLists.txt"
    exit 1
fi


c_c="compile_commands.json"
b_d="${1:-build}"


[ -d "./${b_d}" ] && rm -r "./${b_d}"
[ -f "./${c_c}" ] || [ -h "./${c_c}" ] && rm "./${c_c}"

mkdir "./${b_d}"
cd "./${b_d}"

cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=1 ..

cd ..
ln -s "./${b_d}/${c_c}" .
