#!/usr/bin/env python

# A nice way to view Portage's world file

import portage

world = open(portage.root + portage.WORLD_FILE)

category_tmp=""

for line in world.read().splitlines():

    category = line.split("/")[0]
    if category != category_tmp:
        print("\033[92m \u25cf " + category)
        category_tmp = category

    print("    \033[94m - " + line.split("/")[1])
    
world.close()
