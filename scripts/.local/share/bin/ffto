usage() {
    cat <<EOF
Usage: ffto FILE FORMAT_EXTENSION
ffto - convert a given file to the same
       base name but different extension

Options:
    -h  show avalible options

Copyright (c) 2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
EOF
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    "" )
        echo "ERROR: No arguments passed"
        usage
        exit 1
        ;;
esac

if [ -z "${2}" ]
then
    echo "ERROR: Arguments passed: ${2}"
    echo "ERROR: Two required"
    usage
    exit 1
fi

if [ ! -f "${1}" ]
then
    echo "ERROR: No such file: ${1}"
    exit 1
fi


file_base="${1%.*}"

ffmpeg -hide_banner -i "${1}" "${file_base}.${2}"
