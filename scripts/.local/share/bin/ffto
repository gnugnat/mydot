usage() {
    cat <<EOF
Usage: ffto FORMAT_EXTENSION FILE
ffto - convert a given file to the same
       base name but different extension

Options:
    -h  show avalible options

Copyright (c) 2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
EOF
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    "" )
        echo "ERROR: No arguments passed"
        echo
        usage
        exit 1
        ;;
esac

if [ -z "${2}" ]
then
    echo "ERROR: Arguments passed: ${*}"
    echo "ERROR: Two required"
    echo
    usage
    exit 1
fi

for file in $(echo "${@}" | sed "s/${1}//")
do
    if [ ! -f "${file}" ]
    then
        echo "ERROR: No such file: ${file}"
        exit 1
    fi
done


for file in $(echo "${@}" | sed "s/${1}//")
do
    file_base="${file%.*}"

    ffmpeg -hide_banner -i "${file}" "${file_base}.${1}"
done
