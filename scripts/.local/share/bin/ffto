trap 'exit 128' INT
export PATH


prog_name="$(basename "${0}")"
prog_desc="convert a file (guess format from given extension)"
prog_args="FORMAT_EXTENSION FILE"


usage() {
    cat <<EOF
Usage: ${prog_name} [OPTION]... ${prog_args}
${prog_name} - ${prog_desc}

Options:
    -V, --version  show program version
    -h, --help     show avalible options
EOF
}

version() {
    cat <<EOF
${prog_name} 9999

Copyright (c) 2020-2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
EOF
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    -V | -version | --version )
        version
        exit 0
        ;;
    "" | -* )
        version
        echo
        usage
        exit 1
        ;;
esac

if [ -z "${2}" ]
then
    echo "ERROR: Arguments passed: ${*}"
    echo "ERROR: Two required"
    echo
    usage
    exit 1
fi

for file in $(echo "${@}" | sed "s/${1}//")
do
    if [ ! -f "${file}" ]
    then
        echo "ERROR: No such file: ${file}"
        exit 1
    fi
done


for file in $(echo "${@}" | sed "s/${1}//")
do
    file_base="${file%.*}"

    ffmpeg -hide_banner -i "${file}" "${file_base}.${1}"
done
