trap 'exit 128' INT
export PATH


usage() {
    cat <<USAGE
Usage: locate-ebuild PACKAGE
locate-ebuild - locate ebuilds

Examples:
    locate-ebuild sys-apps/portage
    locate-ebuild util-linux

Copyright (c) 2020-2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
USAGE
}

main() {
    rloc=$(emerge --info | grep location | sed 's/location://g')
    for r in ${rloc}
    do
        find "${r}" -name "*.ebuild" 2>/dev/null | grep -i "$1"
    done
}


if [ -z "${1}" ]
then
    usage
    exit 1
else
    main "${1}"
fi
