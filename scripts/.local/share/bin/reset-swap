trap 'exit 128' INT
export PATH


prog_name="$(basename "${0}")"
prog_desc="reset SWAP"
prog_args="[SWAP_DEVICE]"


usage() {
    cat <<EOF
Usage: ${prog_name} [OPTION]... ${prog_args}
${prog_name} - ${prog_desc}

Options:
    -V, --version  show program version
    -h, --help     show avalible options
EOF
}

version() {
    cat <<EOF
${prog_name} 9999

Copyright (c) 2020-2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
EOF
}

main() {
    if [ -z "${1}" ]
    then
        echo "[D] Deactivating: all"
        swapoff -a -v
        sleep 30
        echo "[A] Activating: all"
        swapon -a -v
    else
        for dev in "${@}"
        do
            echo "[D] Deactivating: ${dev}"
            swapoff -v "${dev}"
            sleep 30
            echo "[A] Activating: ${dev}"
            swapon -v "${dev}"
        done
    fi
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    -V | -version | --version )
        version
        exit 0
        ;;
    -* )
        version
        echo
        usage
        exit 1
        ;;
esac


if [ "$(whoami)" != root ]
then
    echo "Switching to the root user account"
    su root -c "${0} ${*}"
else
    main "${@}"
fi
