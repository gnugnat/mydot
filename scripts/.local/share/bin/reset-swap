trap 'exit 128' INT
export PATH


main() {
    if [ -z "${1}" ]
    then
        echo "[D] Deactivating: all"
        swapoff -a -v
        sleep 30
        echo "[A] Activating: all"
        swapon -a -v
    else
        for dev in "${@}"
        do
            echo "[D] Deactivating: ${dev}"
            swapoff -v "${dev}"
            sleep 30
            echo "[A] Activating: ${dev}"
            swapon -v "${dev}"
        done
    fi
}


if [ "$(whoami)" != root ]
then
    echo "Switching to the root user account"
    su root -c "${0} ${*}"
else
    main "${@}"
fi
