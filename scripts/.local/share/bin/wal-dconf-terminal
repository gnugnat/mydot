#!/bin/sh

# change colors of gnome-terminal
# using colors from pyWal with dconf

# for this to work you must
# have at least 2 profiles

# source pyWal's script
. ~/.cache/wal/colors.sh

terminal_id=:$(dconf read /org/gnome/terminal/legacy/profiles:/default | cut -d "'" -f 2)

dconf write /org/gnome/terminal/legacy/profiles:/$terminal_id/palette "[
'$color0',
'$color1',
'$color2',
'$color3',
'$color4',
'$color5',
'$color6',
'$color7',
'$color8',
'$color9',
'$color10',
'$color11',
'$color12',
'$color13',
'$color14',
'$color15'
]"
