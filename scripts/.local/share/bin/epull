#!/bin/sh

trap 'exit 128' INT
export PATH

script=epull

main() {
    if command -v eix; then
	eix-sync
	eix-remote update
    else
	emerge --sync
    fi
}

if [ "$(whoami)" != root ]; then
    if [ -f ./$script ]; then
	sudo ./$script
    else
	sudo "$(command -v $script)"
    fi
else
    main
fi
