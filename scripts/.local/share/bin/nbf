# No Bullshit Find


trap 'exit 128' INT
export PATH


usage() {
    cat <<EOF
Usage: nbf [OPTION]... FILE
nbf - no-bullshit-find

Options:
    -V, --version    show program version
    -d, --directory  specify search directory
    -f, --file       specify search target
    -h, --help       show avalible options
EOF
}

version() {
    cat <<EOF
$(basename "${0}") 9999

Copyright (c) 2020-2021, Maciej Barć <xgqt@riseup.net>
Licensed under the GNU GPL v3 License
EOF
}


# Defalt search directory
directory="."


while [ -n "${1}" ]
do
    case "${1}"
    in
        -h | -help | --help )
            usage
            exit 0
            ;;
        -V | -version | --version )
            version
            exit 0
            ;;
        -d | -directory | --directory )
            directory="${2}"
            shift
            ;;
        -f | -file | --file )
            file="${2}"
            shift
            ;;
        -* )
            version
            echo
            usage
            exit 1
            ;;
        * )
            file="${1}"
            ;;
    esac
    shift
done


(
    find -L "${directory}" 2>/dev/null \
        | grep -i --color=always "${file}" \
        || echo "Nothing found"
) | less -Kir
