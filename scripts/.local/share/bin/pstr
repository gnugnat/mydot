# Create a portable string:
# - replace space with underscore
# - remove not alphanumerical, space or underscore
# - lowercase

# TODO: awk instead of sh?


trap 'exit 128' INT
export PATH


echo "${*}" | sed -e 's/ /_/g' -e 's/[^ _a-zA-Z0-9]//g' -e 's/\(.*\)/\L\1/g'
