#!/bin/sh


# Get info about current git repo


trap 'exit 128' INT
export PATH


location=${1:-.}

blue=$(tput setaf 4)
bold=$(tput bold)
reset=$(tput sgr0)
yellow=$(tput setaf 3)

remote=$(git config --get remote.origin.url 2>/dev/null)
commits=$(git rev-list --count HEAD 2>/dev/null)
first=$(git log --reverse --format=%cd | sed 1q 2>/dev/null)
last=$(git log --reverse -1 --format=%cd 2>/dev/null)
changes=$(git status --porcelain 2>/dev/null)


cd "${location}" || exit 1

echo "${bold}${blue}Remote:  ${reset}${yellow}${remote}"
echo "${bold}${blue}Commits: ${reset}${yellow}${commits}"
echo "${bold}${blue}First:   ${reset}${yellow}${first}"
echo "${bold}${blue}Last:    ${reset}${yellow}${last}"
echo "${bold}${blue}Changes:${reset}${yellow}${changes}${reset}"
