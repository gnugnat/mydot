#!/bin/sh

# Get info about current git repo

location=${1:-.}

blue=$(tput setaf 4)
bold=$(tput bold)
reset=$(tput sgr0)
yellow=$(tput setaf 3)

remote=$(git config --get remote.origin.url)
commits=$(git rev-list --count HEAD)
first=$(git log --reverse --format=%cd | sed 1q)
last=$(git log --reverse -1 --format=%cd)
changes=$(git status --porcelain)


cd "${location}" || exit 1

echo "${bold}${blue}Remote:  ${reset}${yellow}${remote}"
echo "${bold}${blue}Commits: ${reset}${yellow}${commits}"
echo "${bold}${blue}First:   ${reset}${yellow}${first}"
echo "${bold}${blue}Last:    ${reset}${yellow}${last}"
echo "${bold}${blue}Changes:${reset}${yellow}${changes}"
