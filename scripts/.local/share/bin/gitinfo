# Get info about current git repo


trap 'exit 128' INT
export PATH


blue="$(tput setaf 4)"
bold="$(tput bold)"
reset="$(tput sgr0)"
yellow="$(tput setaf 3)"
header="${bold}${blue}"
rest="${reset}${yellow}"


usage() {
    cat << USAGE
${header}Usage: ${rest}gitinfo [OPTION] [DIRECTORY]
show git repository information

${header}Options:${rest}
    -h      --help           show this help message and exit

Copyright (c) 2020, XGQT
Licensed under the GNU GPL v3 License
USAGE
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    * )
        if [ -d "${1}" ]
        then
            cd "${1}" || exit 1
        fi
        ;;
esac


directory=$(pwd)
remote=$(git config --get remote.origin.url 2>/dev/null)
commits=$(git rev-list --count HEAD 2>/dev/null)
branch=$(git branch 2>/dev/null | sed -n -e 's/^\* \(.*\)/\1/p')
latest_tag=$(git describe --abbrev=0 --tags 2>/dev/null || echo 'N/A')
first=$(git log --date=format:'%Y-%m-%d %H:%M:%S' --format=%cd --reverse | head -1 2>/dev/null)
last=$(git log --date=format:'%Y-%m-%d %H:%M:%S' --format=%cd --reverse -1 2>/dev/null)
# We sed out the "  ." part (which contains a tab)
dir_size=$(du -sh | sed 's/	\.//g')
changes=$(git status --porcelain 2>/dev/null)


cat << INFO
${header}Directory: ${rest}${directory}
${header}Remote:    ${rest}${remote}
${header}Commits:   ${rest}${commits}
${header}Branch:    ${rest}${branch}
${header}Tag:       ${rest}${latest_tag}
${header}First:     ${rest}${first}
${header}Last:      ${rest}${last}
${header}Size:      ${rest}${dir_size}
${header}Changes:  ${rest}${changes}${reset}
INFO
