#!/bin/sh


# Copyright (c) 2020, XGQT
# Licensed under the ISC License

# Noninteractive auto-backup
# script for portage


trap 'exit 128' INT
export PATH


cmdex() {
    if command -v "${1}" >/dev/null 2>&1; then
        return 0
    else
        return 1
    fi
}


if [ -n "${1}" ]; then
    mkdir -p "${1}"
    cd "${1}" || exit 1
fi

# Setup
pbak="portage-$(date +'%Y-%m-%d')"
mkdir "${pbak}"
cmdex emerge || echo "Are you sure you are using Portage?"

# Portage tree
rsync --exclude=".git" -Lr /etc/portage "${pbak}"/
rm -rfd "${pbak}"/portage/make.profile
cmdex tree && tree -a -L 2 /etc/portage > "${pbak}"/layout.txt

# Installed packages
cp /var/lib/portage/world "${pbak}"/
cp /var/lib/portage/world_sets "${pbak}"/
if cmdex qlist; then
    qlist --installed --nocolor --umap > "${pbak}"/qlist-use.txt
    qlist --installed --nocolor --verbose > "${pbak}"/qlist-ver.txt
fi

# System info
cmdex emerge && emerge --info > "${pbak}"/info.txt
cmdex update-genlica && update-genlica -v > "${pbak}"/genlica-version.txt
cmdex gfetch && gfetch > "${pbak}"/gfetch.txt

# Back up package (ebuild) database
if [ -d /var/db/pkg ]; then
    cp -r /var/db/pkg "${pbak}"/pkgdb
fi

# Archive + cleanup
tar zcf "${pbak}".tar.gz "${pbak}" --remove-files || exit 1
