#!/bin/sh


trap 'exit 128' INT
export PATH


main() {
	case $1
	in
		-h | --help | help )
			echo "Use this to clea up the system (Gentoo)"
			echo "No options - ask everytime. Auto - don't ask."
			;;
		-a | --auto | a | auto )
			emerge -c
			eclean-dist --deep
			eclean-pkg --deep
			;;
		* )
			emerge -ca
			eclean-dist --deep --interactive
			eclean-pkg --deep --interactive
			;;
	esac
}


if [ "$(whoami)" != root ]; then
	sudo $0 $1
else
    main $1
fi
