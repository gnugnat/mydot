trap 'exit 128' INT
export PATH


usage() {
    cat <<EOF
Use this to clean up the system (Gentoo)

Usage: epurge [options]

Options:
    auto    don't ask for confirmation
EOF
}

main() {
    case ${1}
    in
        -a | --auto | a | auto )
            emerge -c
            eclean-dist --deep
            eclean-pkg --deep
            ;;
        "" | -n | --noauto | n | noauto )
            emerge -ca
            eclean-dist --deep --interactive
            eclean-pkg --deep --interactive
            ;;
        * )
            echo "Wrong option ${1}"
            usage
            exit 1
            ;;
    esac
}


# Help may be run unprivileged
case ${1}
in
    -h | --help | help )
        usage
        exit 0
        ;;
esac


if [ "$(whoami)" != root ]
then
    echo "Switching to the root user account"
    su root -c "${0} ${*}"
else
    main "${@}"
fi
