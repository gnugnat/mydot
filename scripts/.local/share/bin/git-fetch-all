#!/usr/bin/env bash


# Copyright (c) 2020, XGQT
# Licensed under the ISC License

# Fetch all branches
# https://stackoverflow.com/questions/10312521/how-to-fetch-all-git-branches


trap 'exit 128' INT
export PATH


git branch -r | grep -v '\->' | while read -r remote
do
    git branch --track "${remote#origin/}" "$remote"
done

git fetch --all
git pull --all
