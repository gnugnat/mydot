trap 'exit 128' INT
export PATH


tmpfile=./disktest.img

prog_name="$(basename "${0}")"
prog_desc="test read and write speed"
prog_args=""


usage() {
    cat <<EOF
Usage: ${prog_name} [OPTION]... ${prog_args}
${prog_name} - ${prog_desc}

Options:
    -V, --version  show program version
    -h, --help     show avalible options
EOF
}

version() {
    cat <<EOF
${prog_name} 9999

Copyright (c) 2020-2021, Maciej Barć <xgqt@protonmail.com>
Licensed under the GNU GPL v3 License
EOF
}

write_drop_val() {
    sysctl -wq vm.drop_caches="${1}"
}

main() {
    echo "Writes:"
    sync
    dd if=/dev/zero of="${tmpfile}" bs=64M count=1 oflag=dsync
    sync

    echo "Reads:"
    write_drop_val "3"
    dd if="${tmpfile}" of=/dev/null bs=64M count=1

    if [ -f "${tmpfile}" ]
    then
        rm "${tmpfile}"
    fi
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    -V | -version | --version )
        version
        exit 0
        ;;
    -* )
        version
        echo
        usage
        exit 1
        ;;
esac


if [ "$(whoami)" != root ]
then
    echo "Switching to the root user account"
    su root -c "${0} ${*}"
else
    main "${@}"
fi
