# Test read and write speed


trap 'exit 128' INT
export PATH


tmpfile=./disktest.img


write_drop_val() {
    sysctl -wq vm.drop_caches="${1}"
}

main() {
    echo "Writes:"
    sync
    dd if=/dev/zero of="${tmpfile}" bs=64M count=1 oflag=dsync
    sync

    echo "Reads:"
    write_drop_val "3"
    dd if="${tmpfile}" of=/dev/null bs=64M count=1

    if [ -f "${tmpfile}" ]
    then
        rm "${tmpfile}"
    fi
}


if [ "$(whoami)" != root ]
then
    echo "Switching to the root user account"
    su root -c "${0} ${*}"
else
    main "${@}"
fi
