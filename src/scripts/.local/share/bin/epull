trap 'exit 128' INT
export PATH


prog_name="$(basename "${0}")"
prog_desc="synchronize your Gentoo repositories"
prog_args="[OVERLAY]..."


usage() {
    cat <<EOF
Usage: ${prog_name} [OPTION]... ${prog_args}
${prog_name} - ${prog_desc}

Options:
    -V, --version  show program version
    -h, --help     show avalible options
EOF
}

version() {
    cat <<EOF
${prog_name} 9999

Copyright (c) 2020-2021, Maciej Barć <xgqt@riseup.net>
Licensed under the GNU GPL v3 License
EOF
}

main() {
    if [ -n "${1}" ]
    then
        for overlay in "${@}"
        do
            echo "Syncing ${overlay}"
            emaint sync -r "${overlay}"
        done
        type eix && eix-update
    else
        echo "Syncing all"
        if type eix
        then
            eix-sync
            eix-remote update
        else
            emerge --sync
        fi
    fi
}


case "${1}"
in
    -h | -help | --help )
        usage
        exit 0
        ;;
    -V | -version | --version )
        version
        exit 0
        ;;
    -* )
        version
        echo
        usage
        exit 1
        ;;
esac


if [ "$(whoami)" != root ]
then
    echo "Switching to the root user account"
    su root -c "${0} ${*}"
else
    main "${@}"
fi
