trap 'exit 128' INT
set -e
export PATH


shell=0
user="root"
verbose=0

prog_name="$(basename "${0}")"
prog_desc="odus is kinda like sudo"
prog_args="[COMMAND]"


usage() {
    cat <<EOF
Usage: ${prog_name} [OPTION]... ${prog_args}
${prog_name} - ${prog_desc}

Options:
    -V, --version  show program version
    -h, --help     show avalible options
    -s, --shell    run a shell
    -u, --user     specify the user
    -v, --verbose  be verbose
EOF
}

version() {
    cat <<EOF
${prog_name} 9999

Copyright (c) 2020-2021, Maciej Barć <xgqt@riseup.net>
Licensed under the GNU GPL v3 License
EOF
}


while [ -n "${1}" ]
do
    case "${1}"
    in
        -h | -help | --help )
            usage
            exit 0
            ;;
        -V | -version | --version )
            version
            exit 0
            ;;
        -s | --shell )
            shell=1
            ;;
        -u | --user )
            if [ -n "${2}" ]
            then
                user="${2}"
                shift
            else
                echo "ERROR: Specify the user"
                usage
                exit 1
            fi
            ;;
        -v | --verbose )
            verbose=1
            ;;
        "" )
            echo "ERROR: Provide at lest one argument/option"
            usage
            exit 1
            ;;
        -* )
            version
            echo
            usage
            exit 1
            ;;
        * )
            command="${*}"
            break
            ;;
    esac
    shift
done


if [ ${verbose} -gt 0 ]
then
    echo "Runing with:"
    echo " - As user:   ${user}"
    echo " - Run shell: ${shell}"
    echo " - Command:   ${command}"
fi

if [ ${shell} -gt 0 ]
then
    su -l "${user}"
else
    if [ -z "${command}" ]
    then
        echo "ERROR: Provide a command to execute"
        usage
        exit 1
    else
        eval "su" "${user}" "-c" \" "${command}" \"
    fi
fi
